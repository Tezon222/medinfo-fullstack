{
	"name": "@medinfo/root",
	"type": "module",
	"version": "0.0.0",
	"packageManager": "pnpm@9.15.4",
	"license": "MIT",
	"scripts": {
		"dev:backend": "turbo run --filter=./apps/backend dev",
		"dev:frontend": "turbo run --filter=./apps/frontend dev",
		"inspect:eslint-config": "pnpx @eslint/config-inspector@latest",
		"lint:eslint": "turbo run --filter=./apps/backend lint:eslint",
		"lint:eslint:interactive": "turbo run --filter=./apps/backend lint:eslint:interactive",
		"lint:eslint:root": "eslint . --max-warnings 0",
		"lint:eslint:root:interactive": "pnpx eslint-interactive@latest . --max-warnings 0 --fix",
		"lint:format": "turbo run --filter=./apps/backend lint:format",
		"lint:format:root": "prettier --write .",
		"lint:type-check": "turbo run --filter=./apps/* lint:type-check",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint-react/eslint-plugin": "^1.53.1",
		"@next/eslint-plugin-next": "^15.5.3",
		"@types/node": "^24.5.2",
		"@zayne-labs/eslint-config": "0.9.17",
		"@zayne-labs/prettier-config": "0.9.17",
		"eslint": "9.36.0",
		"eslint-plugin-better-tailwindcss": "^3.7.9",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"husky": "9.1.7",
		"lint-staged": "16.2.0",
		"prettier": "3.6.2",
		"tailwindcss": "^4.1.13",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2"
	}
}
