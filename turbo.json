{
	"$schema": "https://turborepo.org/schema.json",
	"globalEnv": ["DATABASE_URL", "PORT", "NODE_ENV"],

	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**", "build", ".vercel"]
		},
		"lint:format": {},
		"lint:eslint": {},
		"lint:type-check": {},
		"knip": {}
	}
}
