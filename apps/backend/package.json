{
	"name": "@medinfo/backend",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "tsdown",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/app/server.ts --clear-screen=false",
		"lint:eslint": "eslint . --max-warnings 0",
		"lint:format": "prettier --write .",
		"lint:type-check": "tsc --pretty -p tsconfig.json",
		"start": "tsx src/app/server.ts"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "catalog:",
		"@hono/node-server": "1.19.5",
		"@medinfo/backend-db": "workspace:*",
		"@medinfo/shared": "workspace:*",
		"@zayne-labs/tsconfig": "catalog:",
		"consola": "3.4.2",
		"hono": "4.10.1",
		"tsx": "4.20.6",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "0.6.1",
		"@types/node": "24.8.1",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	}
}
